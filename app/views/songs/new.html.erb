  <%= f.text_field :title %>

  <%= f.label :artist %>
  <%= f.text_field :artist_name %>

  <%= f.label :genre %>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>

  <%= f.label :notes %>
  <input name="song[notes][]" id="song_notes_1">
   <%= f.label :notes %>
  <input name="song[notes][]"  id="song_notes_2">
   <%= f.label :notes %>
  <input name="song[notes][]"  id="song_notes_3">

  <br />

  <%= f.submit %>
<% end %>


